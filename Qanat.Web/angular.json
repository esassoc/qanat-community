{
    "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
    "version": 1,
    "newProjectRoot": "projects",
    "projects": {
        "Qanat.Web": {
            "root": "",
            "sourceRoot": "src",
            "projectType": "application",
            "prefix": "",
            "schematics": { "@schematics/angular:component": { "style": "scss" } },
            "architect": {
                "build": {
                    "builder": "@angular-devkit/build-angular:application",
                    "options": {
                        "outputPath": { "base": "wwwroot", "browser": "" },
                        "index": "src/index.html",
                        "polyfills": ["zone.js", "@angular/localize/init"],
                        "tsConfig": "src/tsconfig.app.json",
                        "assets": [
                            "src/assets",
                            { "glob": "**/*", "input": "./node_modules/leaflet/dist/images", "output": "./" },
                            { "glob": "**/*", "input": "node_modules/tinymce", "output": "/tinymce/" },
                            { "glob": "prism.css", "input": "node_modules/prismjs/themes", "output": "assets/prism" }
                        ],
                        "styles": ["src/styles.scss", "node_modules/prismjs/themes/prism.css", "node_modules/leaflet.fullscreen/Control.FullScreen.css"],
                        "scripts": [
                            { "input": "node_modules/prismjs/prism.js", "inject": true, "bundleName": "prism" },
                            "node_modules/prismjs/components/prism-typescript.min.js",
                            "node_modules/prismjs/components/prism-javascript.min.js",
                            "node_modules/prismjs/components/prism-csharp.min.js",
                            "node_modules/prismjs/components/prism-sql.min.js",
                            "node_modules/prismjs/components/prism-json.min.js",
                            "node_modules/prismjs/components/prism-python.min.js"
                        ],
                        "extractLicenses": false,
                        "sourceMap": true,
                        "optimization": false,
                        "namedChunks": true,
                        "browser": "src/main.ts",
                        "stylePreprocessorOptions": { "includePaths": ["."] }
                    },
                    "configurations": {
                        "qa": {
                            "budgets": [{ "type": "anyComponentStyle", "maximumWarning": "6kb" }],
                            "optimization": true,
                            "outputHashing": "all",
                            "namedChunks": false,
                            "fileReplacements": [{ "replace": "src/environments/environment.ts", "with": "src/environments/environment.qa.ts" }]
                        },
                        "production": {
                            "budgets": [{ "type": "anyComponentStyle", "maximumWarning": "6kb" }],
                            "optimization": true,
                            "outputHashing": "all",
                            "sourceMap": false,
                            "namedChunks": false,
                            "extractLicenses": true,
                            "fileReplacements": [{ "replace": "src/environments/environment.ts", "with": "src/environments/environment.prod.ts" }]
                        }
                    },
                    "defaultConfiguration": ""
                },
                "serve": {
                    "builder": "@angular-devkit/build-angular:dev-server",
                    "options": { "host": "qanat.localhost.sitkatech.com", "port": 7613, "buildTarget": "Qanat.Web:build" },
                    "configurations": { "production": { "buildTarget": "Qanat.Web:build:production" } }
                },
                "lint": { "builder": "@angular-eslint/builder:lint", "options": { "lintFilePatterns": ["src/**/*.ts", "src/**/*.html"] } }
            }
        }
    },
    "cli": {
        "analytics": false
    },
    "schematics": {
        "@schematics/angular:component": {
            "type": "component"
        },
        "@schematics/angular:directive": {
            "type": "directive"
        },
        "@schematics/angular:service": {
            "type": "service"
        },
        "@schematics/angular:guard": {
            "typeSeparator": "."
        },
        "@schematics/angular:interceptor": {
            "typeSeparator": "."
        },
        "@schematics/angular:module": {
            "typeSeparator": "."
        },
        "@schematics/angular:pipe": {
            "typeSeparator": "."
        },
        "@schematics/angular:resolver": {
            "typeSeparator": "."
        }
    }
}
